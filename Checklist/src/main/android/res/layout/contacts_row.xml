<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="6dip"
                android:background="@android:drawable/menuitem_background"
                android:id="@+id/contacts_row"
    >
    <ImageView
        android:id="@+id/contacts_row_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="6dip"
        android:focusable="false"
        android:src="@drawable/server_icon_sm"
        android:contentDescription="@string/contacts_row_imagedescription"/>

    <TextView
        android:id="@+id/contacts_row_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/contacts_row_icon"
        android:layout_marginLeft="10dip"
        android:layout_centerHorizontal="true"
        android:paddingTop="2dip"
        android:textSize="10dp"
        android:text=""
        />

    <ImageButton
        android:id="@+id/contacts_row_load"
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dip"
        android:paddingTop="5dip"
        android:focusable="false"
        android:background="@android:color/transparent"
        android:src="@drawable/folder_go"
        android:contentDescription="@string/contacts_row_load"/>

    <ImageButton
        android:id="@+id/contacts_row_delete"
        android:layout_width="wrap_content"
        android:layout_height="18dip"
        android:paddingTop="14dip"
        android:paddingBottom="10dip"
        android:layout_alignParentRight="false"
        android:layout_toLeftOf="@id/contacts_row_load"
        android:layout_marginRight="30dip"
        android:focusable="false"
        android:background="@android:color/transparent"
        android:src="@drawable/sign_cancel"
        android:contentDescription="@string/contacts_row_load"/>

</RelativeLayout>